<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<!--
  Start view wired to StartController.
  Background image is set from StartController.initialize() using rootPane.
-->
<StackPane xmlns:fx="http://javafx.com/fxml"
           fx:controller="org.example.mini.controller.StartController"
           fx:id="rootPane"
           alignment="CENTER"
           prefWidth="900"
           prefHeight="600">

    <children>
        <!-- Panel semi-transparente centrado con controles -->
        <VBox alignment="CENTER"
              spacing="20"
              maxWidth="420"
              maxHeight="260"
              style="-fx-padding: 15;
                     -fx-background-color: rgba(245,245,245,0.80);
                     -fx-background-radius: 10;">
            <children>

                <Label text="CINCUENTAZO"
                       style="-fx-font-size: 32px;
                              -fx-font-weight: bold;
                              -fx-text-fill: #333333;" />

                <Label text="Select number of machine players:"
                       style="-fx-font-size: 16px;
                              -fx-text-fill: #555555;" />

                <HBox spacing="15" alignment="CENTER">
                    <children>
                        <Button text="1 CPU" onAction="#startGame1"
                                style="-fx-background-color: #e0e0e0;
                                       -fx-text-fill: #333333;
                                       -fx-font-size: 14px;
                                       -fx-padding: 8 18;
                                       -fx-background-radius: 6;" />
                        <Button text="2 CPU" onAction="#startGame2"
                                style="-fx-background-color: #d0d0d0;
                                       -fx-text-fill: #333333;
                                       -fx-font-size: 14px;
                                       -fx-padding: 8 18;
                                       -fx-background-radius: 6;" />
                        <Button text="3 CPU" onAction="#startGame3"
                                style="-fx-background-color: #c0c0c0;
                                       -fx-text-fill: #333333;
                                       -fx-font-size: 14px;
                                       -fx-padding: 8 18;
                                       -fx-background-radius: 6;" />
                    </children>
                </HBox>

            </children>
        </VBox>
    </children>
</StackPane>