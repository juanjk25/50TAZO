<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.image.*?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="org.example.mini.controller.GameController"
            prefWidth="800" prefHeight="600"
            stylesheets="@css/game-style.css"
            styleClass="game-root">

    <!-- Top section: table info and players -->
    <top>
        <VBox alignment="CENTER" spacing="10" style="-fx-padding: 15;">
            <!-- Game info -->
            <Label fx:id="lblTableSum"
                   text="Table sum: 0"
                   styleClass="label-title"/>
            <Label fx:id="lblLastCard"
                   text="Last card: None"
                   styleClass="label-info"/>

            <!-- Players status -->
            <Label text="Players:" styleClass="label-subtitle"/>
            <HBox fx:id="playersContainer" alignment="CENTER" spacing="20"/>
        </VBox>
    </top>

    <!-- Center section: last card -->
    <center>
        <VBox alignment="CENTER" spacing="10">
            <Label text="Last card on table:" styleClass="label-subtitle"/>
            <ImageView fx:id="imgLastCard" fitWidth="100" fitHeight="150"/>
        </VBox>
    </center>

    <!-- Bottom section: player's hand -->
    <bottom>
        <VBox alignment="CENTER" spacing="10" style="-fx-padding: 20;">
            <Label text="Your hand:" styleClass="label-title"/>
            <HBox fx:id="handContainer" alignment="CENTER" spacing="10"/>
        </VBox>
    </bottom>
</BorderPane>
